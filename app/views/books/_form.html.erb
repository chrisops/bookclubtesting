

<%= form_with model: @book, local: true do |f| %>
<p>
    <%= f.label :title, "Title: " %>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :author_id, "Author: " %>
    <%= f.collection_select :author_id, @authors, :id, :full_name %>
</p>
<p>
    <%= f.label :genres, "Genres: " %>
    <%= f.collection_check_boxes :genre_ids, @genres, :id, :name %>

</p>

<p>
    <%= f.label :cover_image %>
    <%= f.file_field :cover_image %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>